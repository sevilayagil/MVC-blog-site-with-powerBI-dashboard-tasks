        <th>
            @Html.Label("Kategori Adı")
        </th>
        
        <th>
            @Html.Label("Kategori Başlık")
        </th>
        <th>
            @Html.Label("Kategori Foto")
        </th>
        <th>
            @Html.Label("Kategori Tarih")
        </th>
        <th>
